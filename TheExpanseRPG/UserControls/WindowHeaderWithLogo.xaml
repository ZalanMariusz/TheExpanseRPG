             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheExpanseRPG.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
