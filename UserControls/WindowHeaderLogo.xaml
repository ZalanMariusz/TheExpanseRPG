<UserControl x:Class="TheExpanseRPG.UserControls.WindowHeaderLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheExpanseRPG.UserControls"
             mc:Ignorable="d"
             >
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF1D5CC3" Offset="0.0"/>
                <GradientStop Color="Black" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Foreground="White" Content="THE" RenderTransformOrigin="0.403,0.473"  VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0" FontSize="9" Margin="-3,4,0,0">
            <Label.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Foreground="White" Content="EXPANSE" FontSize="19" Padding="0"  FontWeight="Bold" Height="25" Margin="9,-7,0,7"/>
        <Label Foreground="White" Content="ROLEPLAYING GAME" HorizontalAlignment="Center" FontSize="10" Padding="0" Margin="0,13,0,-7" />

    </Grid>
</UserControl>
